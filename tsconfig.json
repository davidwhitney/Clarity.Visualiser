{
  "include": [
    "./src/**/*.ts",
    "./app/src",
    "./src",
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./vite.config.ts",
    "./vitest.config.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "types": [
    "vitest/globals"
  ]
}
